doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/style.css')
  body.w-screen.h-screen
    .w-full.h-full.flex.flex-col.items-center.justify-start
      header.w-full.flex.justify-between.items-center.px-8.p-4.font-bold
        a.animated-underline(href="/") Home
        nav.flex.justify-between.items-center.gap-4
          if !user
            div.flex.justify-between.items-center.gap-4
              a.animated-underline(href='/login') Login
              a.animated-underline(href='/signup') Signup
          else
            if user,membership !== 'admin'
              div
                a.animated-underline.text-yellow-500(href='/membership' class='before:bg-yellow-500') VIP
            a.animated-underline(href="/logout") Logout
      .p-4.h-full.w-full
        block content
