extends ../layout

block content
    .w-full.h-full.flex.flex-col.justify-center.items-center.p-4.gap-8
        h1.text-4xl.font-bold Are You Sure ?
        if errors && errors.length > 0
            each error in errors
                p.text-red-500.font-bold= error.msg
        form(action="" method="POST")
            input(type="submit" value="Delete" class='px-4 p-1 rounded-lg bg-red-200 hover:bg-red-500 transition-all font-bold text-red-500 hover:text-white cursor-pointer text-xl')
